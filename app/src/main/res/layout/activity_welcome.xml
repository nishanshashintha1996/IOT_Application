<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gredient"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">
    <LinearLayout
        android:padding="5dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/backgroundTitleBarColor"
        android:background="@drawable/nav_bar_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:background="@drawable/nav_bar_background_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:padding="3dp"
                android:src="@drawable/ic_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_warning"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/nav_bar_background_purple"
            android:textStyle="bold"
            android:textColor="@color/getStarted"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="Sign In Now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginRight="5dp"
                android:background="@drawable/nav_bar_background_purple"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="3dp"
                    android:src="@drawable/ic_settings_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ViewFlipper
                android:layout_margin="5dp"
                android:padding="15dp"
                android:background="@drawable/layout_background_black"
                android:id="@+id/v_flifer"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </ViewFlipper>
            <LinearLayout
                android:padding="2dp"
                android:background="@drawable/get_started_btn"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:onClick="openMainActivity"
                    android:textStyle="bold"
                    android:backgroundTint="@color/getStarted"
                    android:background="@drawable/get_started_btn"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:textAllCaps="false"
                    android:text="Get Started"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:textAlignment="center"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:id="@+id/id_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:padding="2dp"
                android:background="@drawable/get_started_btn"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:onClick="openSignInActivity"
                    android:textStyle="bold"
                    android:backgroundTint="@color/registerNow"
                    android:background="@drawable/get_started_btn"
                    android:paddingRight="30dp"
                    android:paddingLeft="30dp"
                    android:textAllCaps="false"
                    android:text="Register Now!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:textAlignment="center"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:id="@+id/id_below_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>